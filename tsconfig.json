{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "outDir": "./dist",
    // "rootDir": "./src", // Removed rootDir to allow including 'tests'
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "types": ["node", "jest", "expect-type"] // Removed "jest" to avoid global type conflicts
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist", "examples"]
}
